<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Flip Card</a>
        </div>
    </div>
</nav>


<div class="signup-form">
    
    <form action="/login" method="post">
        <h2>Sign In</h2>
        <div class="form-group">
            <div class="row">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Email or Phone number">
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input name="password" type="password" class="form-control" id="pwd" placeholder="password">
                </div>
            </div>

        </div>
        <div class="form-group">
            <a href="#"> Forget username or password?</a>
        </div>
        <div>
            <input type="submit" class="btn btn-success btn-md" value="Sign in">
            <button type="button" class="btn btn-info btn-md" role="button" onclick="toRegister()">Sign up</button>
        </div>
    </form>
</div>



<script>
    function toRegister() {
        window.location.replace('/register');
    }
</script>